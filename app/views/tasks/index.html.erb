<br/>
<h1>ToDo</h1>

<div class="row">
    <% @tasks.each_slice(3) do |x| %>
      <% x.each do |task| %>

        <div class="card" style="width: 18rem;">
      <!--    <%= image_tag image_url(task.photo), class: 'card-img-top' %>-->
          <div class="card-body">
              <h5 class="card-title"><%= task.name %></h5>

              <p class="card-text"><strong>Descripci√≥n:</strong><%= task.description %></p>



              <% if checking(task).nil? %>
                  <%= link_to 'No listo',  task_task_details_path(task.id), method: :POST, class: 'btn btn-danger' %>
              <% else %>
                  <%= link_to 'Listo',  task_task_detail_path(task, current_user), method: :DELETE, class: 'btn btn-success' %>
              <% end %>

          </div>
        </div>
      <%end%>
    <%end%>
  </div>
