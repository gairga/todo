<h1>Heading 1</h1>

<div class="row">
    <% @tasks.each_slice(3) do |x| %>
      <% x.each do |task| %>

        <div class="card" style="width: 18rem;">
          <%= image_tag image_url(task.photo), class: 'card-img-top' %> 
          <div class="card-body">
              <h5 class="card-title"><%= task.name %></h5>
              <p class="card-text"><%= task.description %></p>



                      <% if checking(task).nil? %>
                      <td><%= link_to 'Terminar', task_task_details_path(task.id), class: 'btn btn-danger'%></td>

                        <p>NO LISTO</p>
                      <% else %>
                      <p> LISTO</p>
                      <% end %>

          </div>
        </div>
      <%end%>
    <%end%>
  </div>
